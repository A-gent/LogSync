<Window x:Class="LogSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogSync"
        xmlns:views = "clr-namespace:LogSync.View" 
        mc:Ignorable="d"
        Title="LogSync">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="Button_Click" Grid.Row="0">
            <TextBlock>Load Logs...</TextBlock>
        </Button>
        <Grid Name="logGrid" Background="AliceBlue" Grid.Row="1">
        </Grid>
    </Grid>
</Window>
